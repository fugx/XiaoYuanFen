<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_animation_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ig_icon_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_close" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginLeft="3dp"
            android:background="@color/color_f1efef"
            android:layout_toRightOf="@+id/ig_icon_back"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ig_icon_back"
            android:text="活动详情"
            android:textSize="@dimen/font_20"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sl_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_little_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="时间"/>

                <TextView
                    android:id="@+id/tv_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="发布人"/>

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="费用"/>

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="热度"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ig_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ll_little_sign"
                android:scaleType="fitXY"
                android:src="@mipmap/bg2"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ig_img"
                android:layout_marginTop="8dp"
                android:text="活动简介"
                android:textSize="@dimen/font_16" />

            <com.donkingliang.labels.LabelsView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lv_sign_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                app:labelTextPaddingBottom="3dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextPaddingTop="3dp"
                app:labelBackground="@drawable/sign_level2"
                app:labelTextSize="14sp"
                app:lineMargin="10dp"
                app:wordMargin="10dp"
                app:selectType="NONE"/>

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/rv_sign_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_below="@+id/rl_num_type"></android.support.v7.widget.RecyclerView>-->

            <LinearLayout
                android:id="@+id/ll_course_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/lv_sign_list"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_20"
                    android:text="课程简介" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_course_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_course_info"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_14"
                android:text="课程内容"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/ig_animation_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/ig_animation_collect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ig_animation_share" />

        <TextView
            android:id="@+id/tv_open_vip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/button_sure_bg_half_circle"
            android:text="开通会员"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_call_teacher"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/tv_enter_course"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:text="预约教师"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_enter_course"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/font_8"
            android:text="进入课程"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
