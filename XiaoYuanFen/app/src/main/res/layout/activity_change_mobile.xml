<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_change_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ig_change_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ig_change_back"
            android:text="验证手机号"
            android:textSize="@dimen/font_20"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_old_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/rl_change_back"
        android:background="@drawable/edit_underline_selector"
        android:enabled="false"
        android:hint=""
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="@dimen/font_16" />

    <LinearLayout
        android:id="@+id/rl_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/et_old_phone">

        <EditText
            android:id="@+id/et_check_code"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edit_underline_selector"
            android:hint="请输入验证码"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/button_sure_bg_half_circle"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_get_code"
        android:background="@drawable/button_sure_bg_half_circle"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

</RelativeLayout>

