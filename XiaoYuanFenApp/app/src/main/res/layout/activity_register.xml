<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/zc_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:text="注册"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zc_back2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="返回"
            android:textSize="22dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/zc_login_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_underline_selector"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/zc_login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_underline_selector"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="16sp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/zc_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_underline_selector"
        android:hint="请确认密码"
        android:inputType="textPassword"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="16sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/zc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/zc_check_code"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edit_underline_selector"
            android:hint="请输入验证码"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/zc_get_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="5dp"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:background="@drawable/button_sure_bg_half_circle"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp">

        <LinearLayout
            android:id="@+id/agreement_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="@mipmap/icon_select1">

            <ImageView
                android:id="@+id/select_button"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/icon_select2"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_666666"
            android:text="我已阅读并同意"/>

        <TextView
            android:id="@+id/zc_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《注册协议》"
            android:textColor="#66CD00"/>

    </LinearLayout>

    <Button
        android:id="@+id/zc_next"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_sure_bg_half_circle"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

    <Button
        android:id="@+id/zc_done"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_sure_bg_half_circle"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:visibility="gone"/>

</LinearLayout>

