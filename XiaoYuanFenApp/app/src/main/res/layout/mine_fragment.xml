<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--标题-->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:text="我"
                    android:textSize="30dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/ig_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/icon_message" />

                <TextView
                    android:id="@+id/tv_message_num"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/ig_message"
                    android:layout_toRightOf="@+id/ig_message"
                    android:background="@drawable/shape_circle_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/my_info"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/center_my_avater"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/not_login_avatar" />

                <LinearLayout
                    android:id="@+id/go_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="姓名"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/my_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="性别"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/my_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_toRightOf="@+id/my_gender"
                            android:text="年龄"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/go_my_center"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="15dp"
                    android:src="@mipmap/icon_more" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="@dimen/normal_padding"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_moremore" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="@dimen/normal_padding"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:text="常见问题"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_moremore" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>